<h1>Главная страница</h1>

<% if current_customer %>
	<%= link_to "Выйти", destroy_customer_session_path, method: :delete %>
	<%= link_to "Редактировать профиль", edit_customer_registration_path %>
<% elsif current_worker %>
	<%= link_to "Выйти", destroy_worker_session_path, method: :delete %>
	<%= link_to "Редактировать профиль", edit_worker_registration_path %>
<% else %>
	<%= link_to "Я заказчик", new_customer_session_path %>
	<%= link_to "Я исполнитель", new_worker_session_path %>
<% end %>
	
